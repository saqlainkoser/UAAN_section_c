<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Departments</title>

    <style>
        body {
            font-family: "Inter", sans-serif;
            background: #f7f7f7;
            margin: 0;
            padding: 40px;
            color: #333;
        }

        h1 {
            font-size: 32px;
            font-weight: 600;
            margin-bottom: 20px;
        }

        form.filters {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            margin-bottom: 25px;
            gap: 20px;
        }

        .filters input,
        .filters select {
            width: 100%;
            padding: 12px 14px;
            border-radius: 8px;
            border: 1px solid #ccc;
            background: white;
            font-size: 15px;
        }

        .table-container {
            background: white;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.06);
        }

        table {
            width: 100%;
            border-collapse: collapse;
            font-size: 16px;
        }

        thead {
            background: #efefef;
        }

        th, td {
            padding: 18px;
            text-align: left;
        }

        tr:nth-child(even) {
            background: #f8f8f8;
        }

        .btn-edit {
            background: #4f6d7a;
            color: white;
            padding: 8px 16px;
            border-radius: 8px;
            text-decoration: none;
            font-size: 14px;
        }

        .btn-delete {
            color: #d9534f;
            text-decoration: none;
            margin-left: 15px;
            font-size: 14px;
            font-weight: 500;
        }
    </style>
</head>

<body>

    <h1>All Departments</h1>

    <div >
       <form action="/departments" method="get" class="filters">
            <input type="text" name="search" value="<%=search%>" placeholder="Search Deapartment By Name">
            <select name="type" >
                <option value="all" <%=type == "all" ? "selected" :  ""  %> >ALL</option>
                <option value="UG" <%=type == "UG" ? "selected" :  ""  %> >UG</option>
                <option value="PG" <%=type == "PG" ? "selected" :  ""  %> >PG</option>
                <option value="Research" <%=type == "Research" ? "selected" :  ""  %>>Research</option>
            </select>
            <button type="submit">Apply</button>
       </form>
    </div>

    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>Department Name</th>
                    <th>Type</th>
                    <th>Number of Users</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                <% departments.forEach(function(dep){ %>
                    <tr>
                        <td> <%= dep.name %> </td>
                        <td> <%= dep.type %> </td>
                        <td> <%= dep.userCount %> </td>
                        <td>
                            <a href="#" class="btn-edit">Edit</a>
                            <a href="#" class="btn-delete">Delete</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

</body>
</html>
